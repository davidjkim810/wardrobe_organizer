
<h1>Wardrobe: <%=@wardrobe.name%></h1>

<% @wardrobe.categories.each_with_index do |category, index| %>
<h3><%="#{index+1}. " %><%= category.name %></h3>
  <% if category.items.empty? %>
    <h5>There are no items in this wardrobe</h5>
  <%else%>
    <% category.items.each do |item| %>
      <%="Item Name: " %><%= item.name %><br>
      <%="Item Brand: " %><%= item.brand.name %><br><br>
      <%end%>
  <%end%>
<%end%><br>

<a href="/wardrobes">Edit Wardrobe/Categories</a><br>
<a href="/items/new/<%=@wardrobe.slug%>">Add Items</a><br><br>
<form action="/wardrobes/<%=@wardrobe.id%>/delete" method="POST">
  <input id="hidden" type="hidden" name="_method" value="delete"><input type="submit" value="Delete Wardrobe" ></form>
<a href="/">Return Home</a><br>
<a href="/logout">Log Out</a>
